
@{
    ViewData["Title"] = "Customer";
    
}



<style>
    td.details-control {
        background: url('/global_assets/images/details_open.png') no-repeat center center;
    }

    tr.shown td.details-control {
        background: url('/global_assets/images/details_close.png') no-repeat center center;
    }
</style>
<div class="content pt-0">

    <div class="page-header border-bottom-0">
        <div class="page-header-content header-elements-md-inline">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Customer Details</span></h4>
                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
            <div class="d-flex">
                <div class="breadcrumb">
                    <a href="/" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                    <span class="breadcrumb-item">Master</span>

                    <span class="breadcrumb-item active">Customer Details</span>
                </div>

                <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
            </div>
        </div>
    </div>
    <div class="card mt-3 pt-0 pb-0">
        <div class="card-header header-elements-inline pt-0 pb-0">
            <div class="page-title d-flex">
                <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">All Customer Information</span> </h4>&nbsp;
                <button type="button" class="btn btn-outline bg-teal-400 text-teal-400 border-teal-400" id="btnAdd" cid="0" onclick="CallFunc(this);">
                    <i class="icon-add"></i> Add New
                </button>
            </div>

            <div class="list-icons">
                <a class="list-icons-item" data-action="reload"></a>
            </div>
        </div>

        <div class="dataTables_wrapper no-footer" id="dvContent">

            <div class="datatable-scroll-wrap">

                <table class="table-dark datatable-button-html5-columns" id="example1" >
                    <thead>
                        <tr>
                            <th></th>
                            <th>S No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Mobile Number</th>
                            <th>Contect Person Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                    </tfoot>
                    <tbody></tbody>
                </table>
                <input type="hidden" id="testcid" value="0" />

            </div>
        </div>
    </div>
</div>
<div id="modal_form_vertical" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form class="form-validate-jquery" onsubmit="return Formsubmit();" name="registration">
            <div id="user_content">

            </div>
        </form>
    </div>
</div>


@section scripts {

    <script src="~/ViewJs/Configuration/Customer.js?@DateTime.Now.Ticks"></script>
}

