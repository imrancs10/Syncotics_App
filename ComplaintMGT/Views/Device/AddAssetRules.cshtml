@model ComplaintMGT.Abstractions.Entities.Device.AssetRulesInfo

<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Add Asset Rules</h3>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
        <fieldset>
            <legend>Asset Rules Details</legend>
            <input type="hidden" asp-for="AssetRulesId" name="AssetRulesId" />
            
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Rule Name</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter Rule Name" class="form-control form-control-select2" asp-for="RuleName" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Asset</label>
                        <span class="text-danger">*</span>
                        <select id="AssetId" asp-for="AssetId" required
                                class="form-control"
                                asp-items="@(new SelectList(@ViewBag.AssetType,"AssetId", "Name")) ">
                            <option value="0">Select</option>
                        </select>
                    </div>

                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>LCL</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter LCL" class="form-control" asp-for="LCL" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>UCL</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter UCL" class="form-control" asp-for="UCL" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Measurement</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter Measurement" class="form-control" asp-for="Measurement" required>
                    </div>

                </div>


            </div>



        </fieldset>

    </div>


    <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
        <button type="button" class="btn bg-transparent text-white border-white border-2" data-dismiss="modal">Close</button>
        <button type="submit" id="modSubmit" class="btn btn-outline bg-white text-white border-white border-2">Submit <i class="icon-paperplane ml-2"></i></button>
    </div>

</div>

