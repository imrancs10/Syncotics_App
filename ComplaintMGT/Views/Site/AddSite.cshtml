@model ComplaintMGT.Abstractions.Entities.SiteInfo

<div class="modal-content">
    <div class="modal-header">
        <h3 class="modal-title">Add Site</h3>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
        <fieldset>
            <legend>Site Details</legend>
            <input type="hidden" asp-for="SiteId" name="SiteId" />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Customer</label>
                        <span class="text-danger">*</span>
                        <select id="CustomerId" asp-for="CustomerId" required class="form-control form-control-select2" asp-items="@(new SelectList(@ViewBag.Custmer,"CustomerId", "Name"))" >
                            <option value="0">Select</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Site Name</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter Name" class="form-control" asp-for="Name" name="Name" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Address Line 1</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter Address Line 1" class="form-control" asp-for="AddressLine1" name="AddressLine1" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Address Line 2</label>
                        <span class="text-danger">*</span>
                        <input type="text" placeholder="Enter Address Line 2" class="form-control" asp-for="AddressLine2" name="AddressLine2" required>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Country</label>
                        <span class="text-danger">*</span>
                        <select id="CountryId" asp-for="CountryId" required class="form-control form-control-select2" asp-items="@(new SelectList(@ViewBag.cuntry,"CountryId", "CountryName"))">
                            <option value="0">Select</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>State</label>
                        <span class="text-danger">*</span>
                        <select id="StateId" asp-for="StateId" required class="form-control form-control-select2" asp-items="@(new SelectList(@ViewBag.StateLst,"StateId", "StateName"))" >
                            <option value="0">Select</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>City</label>
                        <span class="text-danger">*</span>
                        <select id="CityId" asp-for="CityId" required class="form-control form-control-select2" asp-items="@(new SelectList(@ViewBag.CityLst,"CityId", "CityName"))" >
                        
                            <option value="0">Select</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Pin Code</label>

                        <input type="number" placeholder="Enter Serial No" class="form-control" asp-for="PinCode" name="PinCode" required />
                    </div>

                </div>

                <div class="col-sm-6">
                    <div class="form-group">

                        <div class="form-check form-check-switchery">

                            <label class="form-check-label">
                                <input type="checkbox" id="IsDSTEnabled" class="form-check-input-switchery" asp-for="IsDSTEnabled" name="IsDSTEnabled" checked data-fouc>
                                Is DST Enabled
                            </label>
                        </div>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="form-check form-check-switchery">

                            <label class="form-check-label">
                                <input type="checkbox" id="IsActive" class="form-check-input-switchery" asp-for="IsActive" name="IsActive" checked data-fouc>
                                Is Active
                            </label>
                        </div>
                    </div>

                </div>
            </div>



        </fieldset>

    </div>


    <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
        <button type="button" class="btn bg-transparent text-white border-white border-2" data-dismiss="modal">Close</button>
        <button type="submit" id="modSubmit" class="btn btn-outline bg-white text-white border-white border-2">Submit <i class="icon-paperplane ml-2"></i></button>
    </div>

</div>

<script src="~/ViewJs/Site/AddSite.js"></script>
